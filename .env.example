# Database
DATABASE_URL=mongodb://localhost:27017/brainsait
MONGO_USER=brainsait_admin
MONGO_PASSWORD=your_secure_password_here
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000
MONGODB_MAX_POOL_SIZE=50
MONGODB_MIN_POOL_SIZE=1
MONGODB_TLS=false
MONGODB_TLS_CA_FILE=
ATLAS_DEPLOY_URI=
ATLAS_DEPLOY_DB=brainsait_platform

# Redis
REDIS_URL=redis://localhost:6379

# NPHIES Integration
NPHIES_API_KEY=your_nphies_api_key
NPHIES_BASE_URL=https://api.nphies.sa/v1

# Security
ENCRYPTION_KEY=your_32_character_encryption_key
JWT_SECRET=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION=24h

# API Configuration
API_URL=http://localhost:8000
NEXT_PUBLIC_API_URL=http://localhost:8000
ALLOWED_ORIGINS=http://localhost:3000
ALLOW_CREDENTIALS=false

# Email Configuration (for compliance letters)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@brainsait.com
SMTP_PASSWORD=your_email_password
FROM_EMAIL=noreply@brainsait.com

# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Cloudflare (Production)
CF_ACCOUNT_ID=your_cloudflare_account_id
CF_ZONE_ID=your_cloudflare_zone_id
CF_API_TOKEN=your_cloudflare_api_token

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/brainsait/api.log
