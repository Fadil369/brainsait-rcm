{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
  "manifestVersion": "1.16",
  "version": "1.0.0",
  "id": "${{TEAMS_APP_ID}}",
  "packageName": "com.brainsait.stakeholder-channels",
  "developer": {
    "name": "BrainSAIT",
    "websiteUrl": "https://brainsait.com",
    "privacyUrl": "https://brainsait.com/privacy",
    "termsOfUseUrl": "https://brainsait.com/terms"
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "name": {
    "short": "Stakeholder Channels",
    "full": "BrainSAIT RCM Stakeholder Channels"
  },
  "description": {
    "short": "Team collaboration for healthcare stakeholders",
    "full": "Real-time communication and collaboration platform for HeadQ, Branches, Providers, Payers, and Auditors in the BrainSAIT RCM system."
  },
  "accentColor": "#6264A7",
  "bots": [
    {
      "botId": "${{BOT_ID}}",
      "scopes": [
        "personal",
        "team",
        "groupchat"
      ],
      "supportsFiles": true,
      "isNotificationOnly": false,
      "commandLists": [
        {
          "scopes": [
            "personal",
            "team",
            "groupchat"
          ],
          "commands": [
            {
              "title": "List Channels",
              "description": "Show all stakeholder channels"
            },
            {
              "title": "Create Channel",
              "description": "Create a new stakeholder channel"
            },
            {
              "title": "Team Info",
              "description": "Get team information and members"
            },
            {
              "title": "Help",
              "description": "Get help with the bot commands"
            }
          ]
        }
      ]
    }
  ],
  "staticTabs": [
    {
      "entityId": "stakeholder-channels",
      "name": "Channels",
      "contentUrl": "${{TAB_ENDPOINT}}/index.html#/channels",
      "websiteUrl": "${{TAB_ENDPOINT}}/index.html#/channels",
      "scopes": [
        "personal"
      ]
    },
    {
      "entityId": "team-channels",
      "name": "Team Channels",
      "contentUrl": "${{TAB_ENDPOINT}}/index.html#/team",
      "websiteUrl": "${{TAB_ENDPOINT}}/index.html#/team",
      "scopes": [
        "groupchat",
        "team"
      ]
    }
  ],
  "configurableTabs": [
    {
      "configurationUrl": "${{TAB_ENDPOINT}}/index.html#/config",
      "canUpdateConfiguration": true,
      "scopes": [
        "team",
        "groupchat"
      ]
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "${{TAB_DOMAIN}}",
    "${{BOT_DOMAIN}}"
  ],
  "webApplicationInfo": {
    "id": "${{AAD_APP_CLIENT_ID}}",
    "resource": "api://${{TAB_DOMAIN}}/${{AAD_APP_CLIENT_ID}}"
  }
}
